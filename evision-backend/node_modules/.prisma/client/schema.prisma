generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Applicant {
  id             String   @id @default(uuid())
  name           String
  student_number String   @unique
  phone_number   String
  email          String
  A1             String
  A2             String
  createdAt      DateTime @default(now())
}

model admins {
  id        String   @id @default(uuid())
  email     String   @unique // ✅ 관리자 계정은 이메일로 로그인
  password  String // ✅ 해싱된 비밀번호 저장
  createdAt DateTime @default(now()) // ✅ 계정 생성 시간
  role      String   @default("user")

  @@map("admins") // ✅ 테이블명을 'admins'로 강제 설정
}
