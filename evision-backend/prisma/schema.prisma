generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Applicant {
  id             String   @id @default(uuid())
  name           String
  student_number String   @unique
  phone_number   String
  email          String
  A1             String
  A2             String
  createdAt      DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  studentId String   @unique // 학번 (유니크 값)
  password  String // 비밀번호 (해싱된 값 저장)
  role      String   @default("user") // 기본값: 일반 사용자
  createdAt DateTime @default(now()) // 계정 생성 시간
}
